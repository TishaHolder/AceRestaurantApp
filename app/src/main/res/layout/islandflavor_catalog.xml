<!--  main page layout -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tishay.acerestaurantapp.menu_screen_activity">

    <!--  main page layout -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

    <!--toolbar/app bar -->
    <include
        android:id="@+id/menuscreen_toolbar"
        layout="@layout/custom_menuscreen_actionbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></include>


    <!-- screen title -->
    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="24dip"
        android:layout_margin="5dip"
        android:text="Island Flavor">

    </TextView>

    <!-- list view that contains all products in island flavor catalog -->
    <ListView
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/islandflavorcatalog_listview"
        android:layout_width="fill_parent"
        android:background="@drawable/homelistviewshape"
        android:clickable="true"
        android:cacheColorHint="#ffffff">
    </ListView>

<!-- main page layout closing tag -->
</LinearLayout>

<!-- main page layout closing tag -->
</RelativeLayout>
